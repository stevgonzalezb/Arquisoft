
@{
    ViewBag.Title = "NotAuthorized";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="col-12">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-red"> 401</h2>

            <div class="error-content">
                <h3><i class="fas fa-exclamation-triangle text-red"></i> Oops! Not Authorized.</h3>

                <p>
                    Su usuario no esta autorizado para realizar esta acción. Por favor contacte al administrador del sistema.
                    Mientras, puede <a href="@Url.Action("Index", "Home")">regresar al inicio</a>.
                </p>
            </div>
            <!-- /.error-content -->
        </div>
        <!-- /.error-page -->
    </section>
    <!-- /.content -->
</div>
