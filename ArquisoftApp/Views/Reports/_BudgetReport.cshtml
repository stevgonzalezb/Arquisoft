@model ArquisoftApp.Models.ReportsModel.BudgetReport
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_BudgetReport</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        @*<i class="fas fa-globe"></i> AdminLTE, Inc.*@
                        <img src="~/Content/img/logo-inverted.png" alt="Arquisoft Logo" class="brand-image-xl " style="opacity: .8">
                        @*<small class="float-right">@DateTime.Now</small>*@
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <div>
                        <strong>@Model.CompanyName</strong><br>
                        @Model.CompanyId<br>
                        @Model.CompanyAddress<br>
                        @Model.CompanyEmail<br>
                        @Model.CompanyPhone
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <div>
                        <strong>@Model.Project.Name</strong><br>
                        Cliente: @Model.Customer.Name @Model.Customer.Last_Name<br>
                        Área Terreno: @Model.Project.SiteArea m<sup>2</sup><br>
                        Área contrucción: @Model.Project.ConstructionArea m<sup>2</sup><br>

                        @*Phone: (555) 539-1037<br>
                        Email: john.doe@example.com*@
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Presupuesto #@Model.Budget.Id</b><br>
                    <b>@Model.Budget.Name</b><br>
                    <b>Generado por:</b> @Model.CurrentUser.Name @Model.CurrentUser.Last_Name<br>
                    <b>Fecha:</b> @DateTime.Now<br>
                    @*<b>Account:</b> 968-34567*@
                </div>
                <!-- /.col -->
            </div>
            <br />
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Descripción</th>
                                <th>Cantidad</th>
                                <th>Unidad Medida</th>
                                <th>Precio</th>
                                <th>Total Línea</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var oReportLines in Model.BudgetLines)
                            {
                                var totalLine = oReportLines.Quantity * oReportLines.Price;
                            <tr>
                                <td>@oReportLines.Description</td>
                                <td>@oReportLines.Quantity</td>
                                <td>@oReportLines.UOM</td>
                                <td>@Decimal.Parse(oReportLines.Price.ToString()).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-CR"))</td>
                                <td>@Decimal.Parse(totalLine.ToString()).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-CR")) </td>
                            </tr>
                             }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <hr />
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">
                    <p class="lead">Comentarios:</p>
                    @*<img src="~/Scripts/AdminLTE/dist/img/credit/visa.png" alt="Visa">
                    <img src="~/Scripts/AdminLTE/dist/img/credit/mastercard.png" alt="Mastercard">
                    <img src="~/Scripts/AdminLTE/dist/img/credit/american-express.png" alt="American Express">
                    <img src="~/Scripts/AdminLTE/dist/img/credit/paypal2.png" alt="Paypal">*@

                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                        @Model.Project.Comments
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-6">
                    @*<p class="lead">Amount Due 2/22/2014</p>*@

                    <div class="table-responsive">
                        @{ decimal fee = Decimal.Parse(Model.Budget.Fee.ToString()) / 100;
                            var finalTotal = (Model.Budget.Total * fee) + Model.Budget.Total;  
                         }

                        <table class="table">
                            <tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>@Decimal.Parse(Model.Budget.Total.ToString()).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-CR"))</td>
                            </tr>
                            <tr>
                                <th>Honorarios(%)</th>
                                <td>@Model.Budget.Fee%</td>
                            </tr>
                            <tr>
                                <th>Total:</th>
                                <td>@Decimal.Parse(finalTotal.ToString()).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-CR"))</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>
  window.addEventListener("load", window.print());
    </script>
</body>
</html>
