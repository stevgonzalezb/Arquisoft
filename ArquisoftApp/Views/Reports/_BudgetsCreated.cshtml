@model ArquisoftApp.Models.ReportsModel.BudgetsCreated
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_ProjectsByCustomer</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        @*<i class="fas fa-globe"></i> AdminLTE, Inc.*@
                        <img src="~/Content/img/logo-inverted.png" alt="Arquisoft Logo" class="brand-image-xl " style="opacity: .8">
                        <small class="float-right">@DateTime.Now</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <div class="row">
                <div class="col-md-8 offset-md-4">
                    <h4 class="page-header">Presupuestos creados entre fechas</h4>
                </div>
            </div>
            <hr />
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <div>
                        <strong>@Model.CompanyName</strong><br>
                        @Model.CompanyId<br>
                        @Model.CompanyAddress<br>
                        @Model.CompanyEmail<br>
                        @Model.CompanyPhone
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Generado por:</b> @Model.CurrentUser.Name @Model.CurrentUser.Last_Name<br>
                    <b>Fecha:</b> @DateTime.Now<br>
                    @*<b>Account:</b> 968-34567*@
                </div>
                <!-- /.col -->
            </div>
            <br />
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>No. Línea</th>
                                <th>Presupuesto</th>
                                <th>Fecha de creación</th>
                                <th>Tipo</th>
                                <th>% Honorarios</th>
                                <th>Subtotal</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* @foreach (var oReportLines in Model.Budgets)*@
                            @for (int i = 0; i < Model.Budgets.Count; i++)
                            {
                                var oReportLines = Model.Budgets[i];
                                var noLinea = i + 1;
                                decimal fee = Decimal.Parse(oReportLines.Fee.ToString()) / 100;
                                var finalTotal = (oReportLines.Total * fee) + oReportLines.Total;
                                <tr>
                                    <td>@noLinea</td>
                                    <td>@oReportLines.Name</td>
                                    <td>@oReportLines.CreationDate</td>
                                    <td>@oReportLines.Type</td>
                                    <td>@oReportLines.Fee%</td>
                                    <td>@Decimal.Parse(oReportLines.Total.ToString()).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-CR"))</td>
                                    <td>@Decimal.Parse(finalTotal.ToString()).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-CR"))</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>
        window.addEventListener("load", window.print());
    </script>
</body>
</html>
