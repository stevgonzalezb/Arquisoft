@model ArquisoftApp.Models.ReportsModel.ProjectsByCustomer
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_ProjectsByCustomer</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/AdminLTE/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        @*<i class="fas fa-globe"></i> AdminLTE, Inc.*@
                        <img src="~/Content/img/logo-inverted.png" alt="Arquisoft Logo" class="brand-image-xl " style="opacity: .8">
                        @*<small class="float-right">@DateTime.Now</small>*@
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <div>
                        <strong>@Model.CompanyName</strong><br>
                        @Model.CompanyId<br>
                        @Model.CompanyAddress<br>
                        @Model.CompanyEmail<br>
                        @Model.CompanyPhone
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <div>
                        Cliente: @Model.Customer.Name @Model.Customer.Last_Name<br>
                        Teléfono: @Model.Customer.Phone<br>
                        Email: @Model.Customer.Email<br>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Generado por:</b> @Model.CurrentUser.Name @Model.CurrentUser.Last_Name<br>
                    <b>Fecha:</b> @DateTime.Now<br>
                    @*<b>Account:</b> 968-34567*@
                </div>
                <!-- /.col -->
            </div>
            <br />
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Proyecto</th>
                                <th>Área de Terreno</th>
                                <th>Ára de Construcción</th>
                                <th>Niveles</th>
                                <th>Encargado de Obra</th>
                                <th>Estado</th>
                                <th>Comentarios</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var oReportLines in Model.Projects)
                            {
                                var status = "";

                                switch(oReportLines.Status)
                                {
                                    case "E":
                                        status = "Ejecución";
                                        break;
                                    case "C":
                                        status = "Crítico";
                                        break;
                                    case "D":
                                        status = "Detenido";
                                        break;
                                }

                                <tr>
                                    <td>@oReportLines.Name</td>
                                    <td>@oReportLines.SiteArea m<sup>2</sup></td>
                                    <td>@oReportLines.ConstructionArea m<sup>2</sup></td>
                                    <td>@oReportLines.Levels</td>
                                    <td>@oReportLines.MasterBuilder</td>
                                    <td>@status</td>
                                    <td>@oReportLines.Comments</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>
  window.addEventListener("load", window.print());
    </script>
</body>
</html>
