
@{
    ViewBag.Title = "Materiales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <!-- Usuarios -->
    <section class="content">
        <div class="card-body p-2" style="background-color:whitesmoke">
            <table class="display responsive nowrap" id="myTable" style="width:100%" data-page-length='10'>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Direcci&oacute;n</th>
                        <th>Tel&eacute;fono</th>
                        <th>Correo</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>

</div>
<!-- /.content-wrapper -->
<!-- Modal -->
<form class="modal" id="FormModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"></h4>

            </div>
            <div class="modal-body">

                <input type="hidden" id="txtId" />

                <div class="form-group">
                    <input type="checkbox" class="form-check-input m-0" id="chkEnable">
                    <label class="form-check" for="chkEnable">Activo</label>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label for="txtName">Nombre:</label>
                        <input type="text" class="form-control" id="txtName" name="txtName">
                    </div>
                    <div class="form-group col-6">
                        <label for="txtLastName">Apellidos:</label>
                        <input type="text" class="form-control" id="txtLastName" name="txtLastName">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label for="txtPhone">Telefono:</label>
                        <input type="text" class="form-control" id="txtPhone" name="txtPhone">
                    </div>
                    <div class="form-group col-6">
                        <label for="txtEmail">Correo:</label>
                        <input type="text" class="form-control" id="txtEmail" name="txtEmail">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-12">
                        <label for="txtAddress">Direccion:</label>
                        <textarea class="form-control" rows="3" cols="50" id="txtAddress" name="txtAddress"></textarea>
                    </div>
                </div>

            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-primary" onclick="Save()">Guardar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</form>
<!-- /.modal -->


@section scripts{
    <script>
        const api = new ClientApi();
        var client_table;
         $(document).ready( function () {

             LoadTable();

         });

        function LoadTable() {
            client_table = $('#myTable').DataTable({
                 "ajax": {
                     "url": "@Url.Action("List", "Client")",
                     "type": "GET",
                     "datatype": "json"
                 },
                 "columns": [
                     { "data": "Name" },
                     { "data": "Last_Name" },
                     { "data": "Address" },
                     { "data": "Phone" },
                     { "data": "Email" },
                     {
                         "data": "IdClient", "render": function (data) {
                             var buttons = "";

                             @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.MATERIAL_EDIT))
                              {
                                 <text> buttons += "<button data-toggle='tooltip' data-placement='top' title='Acción para realizar cambios en los datos de los clientes' class='btn btn-primary btn-sm' type='button' onclick='openModal(" + data + ", \"Editar\")'>Editar &nbsp;<i class='fas fa-pen'></i></button>" </text>
                              }

                             @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.MATERIAL_DELETE))
                              {
                                 <text> buttons += "<button data-toggle='tooltip' data-placement='top' title='Acción para realizar el eliminado de clientes' class='btn btn-danger btn-sm ml-2' type='button' onclick='Delete(" + data + ")'>Eliminar &nbsp;<i class='fa fa-trash'></i></button>" </text>
                              }

                             return buttons;
                         },
                         "orderable": false,
                         "searchable": false,
                         "width": "100px"
                     }
                 ],
                 dom: 'Bfrtip',
                 buttons: [

                     @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.MATERIAL_ADD))
                      {
                        <text>
                            {
                                text: 'Agregar Nuevo',
                                attr: { class: 'btn btn-success btn-sm' },
                                action: function (e, dt, node, config) {
                                    openModal(0, "Agregar");
                                }

                            }
                        </text>
                      }

                 ],
                 "language": {
                     "url": "@Url.Content("~/Content/datatable/idioma/datatable.es-ES.json")"
                 }

            });

            // Methods who add or remove de styled classes
            $.validator.setDefaults({
                //Add Error Class To Fieldset if field invalid
                highlight: function (element) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                //Add Valid Class To Fieldset if field valid
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid').addClass('is-valid');
                },
                errorPlacement: function (error, element) {
                    error.addClass('validation-error text-red small').insertAfter(element);
                }
            });

            // Custom methods for validations
            $.validator.addMethod('emailRegex', function (value, element, parameter) {
                return value.match(app.enums.Regex.Email);
            }, '');

            // Form validations
            var validator = $("#FormModal").validate({
                rules: {
                    txtName: {
                        required: true,
                        minlength: 1
                    },
                    txtLastName: {
                        required: true,
                        minlength: 1
                    },
                    txtPhone: {
                        required: true,
                        minlength: 8
                    },
                    txtEmail: {
                        required: true,
                        emailRegex: true
                    }
                },
                messages: {
                    txtName: {
                        required: "Requerido",
                        minlength: "Ingrese un nombre válido."
                    },
                    txtLastName: {
                        required: "Requerido",
                        minlength: "Ingrese un apellido válido."
                    },
                    txtPhone: {
                        required: "Requerido",
                        minlength: "Ingrese un número válido."
                    },
                    txtEmail: {
                        required: "Requerido",
                        emailRegex: "Ingrese un correo válido"
                    }
                }
            });
        }

        function openModal($clientId, action) {

            CleanModal();
            $("#txtId").val($clientId);
            $(".modal-title").text(action);
            if ($clientId != 0) {

                api.GetClient($clientId).then(client => {

                    if (client != null) {

                        $("#chkEnable").prop('checked', true);
                        $("#txtName").val(client.Name);
                        $("#txtLastName").val(client.Last_Name);
                        $("#txtAddress").val(client.Address);
                        $("#txtPhone").val(client.Phone);
                        $("#txtEmail").val(client.Email);

                    }

                })
            } else {

                $("#chkEnable").prop('checked', true);
                $("#txtName").val("");
                $("#txtLastName").val("");
                $("#txtAddress").val("");
                $("#txtPhone").val("");
                $("#txtEmail").val("");
            }

            $('#FormModal').modal('show');

        }

        function Save() {
            if ($("#FormModal").valid()) {
                var $data = {
                    oClient: {
                        IdClient: parseInt($("#txtId").val()),
                        Name: $("#txtName").val(),
                        Last_Name: $("#txtLastName").val(),
                        Address: $("#txtAddress").val(),
                        Phone: $("#txtPhone").val(),
                        Email: $("#txtEmail").val(),
                        IdState: $("#chkEnable").prop('checked') ? app.enums.States.ACTIVE : app.enums.States.DISABLE
                    }
                }

                api.SaveClient($data).then(response => {
                    if (response.result === 'OK') {
                        client_table.ajax.reload();
                        $('#FormModal').modal('hide');
                        toastr.success('Usuario guardado correctamente.')
                    } else {
                        toastr.error(response.result);
                    }
                }).catch(err => {
                    toastr.error("Ocurrió un error guardando los datos del cliente.");
                })
            }
            else {
                toastr.error('Por favor valide los datos ingresados.')
            }

        }

        function Delete($clientId) {
            if (confirm("¿Realmente desea eliminar?")) {

                api.DeleteClient($clientId).then(response => {
                    if (response.result) {
                        client_table.ajax.reload();
                        toastr.success('Cliente eliminado correctamente.');
                    }
                }).catch(err => {
                    toastr.error("Ocurrió un error eliminando los datos del cliente.");
                })
            }
        }

        function ValidateInputs() {

            var ret = true;

            if ($("#txtEmail").hasClass("is-invalid")) {
                ret = false;
            }

            return ret;
        }

        function CleanModal() {
            if ($("#txtEmail").hasClass("is-invalid")) {

                $("#txtEmail").removeClass("is-invalid");
                $('.invalid-feedback').remove();
            }
        }

    </script>

    @Scripts.Render("~/Scripts/components/Validations.js")
}


